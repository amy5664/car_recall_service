<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.dao.BoardAttachDAO">

    <insert id="insert">
        insert into board_attach (uuid, uploadPath, fileName, image, boardNo)
        values (#{uuid}, #{uploadPath}, #{fileName}, #{image}, #{boardNo})
    </insert>

    <select id="findByBoardNo" resultType="com.boot.dto.BoardAttachDTO">
        select * from board_attach where boardNo = #{boardNo}
    </select>

    <delete id="deleteAll">
        delete from board_attach where boardNo = #{boardNo}
    </delete>
</mapper>
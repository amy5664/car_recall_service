<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.boot.dao.UploadDAO">

	<!-- 첨부파일 등록 -->
	<insert id="insertFile" parameterType="com.boot.dto.BoardAttachDTO">
		INSERT INTO BOARD_ATTACH (
			UUID,
			UPLOADPATH,
			FILENAME,
			IMAGE,
			BOARDNO
			)
		VALUES (
			#{uuid},
			#{uploadPath},
			#{fileName},
			#{image},
			#{boardNo}
		)
	</insert>

	<resultMap id="boardAttachResultMap" type="com.boot.dto.BoardAttachDTO">
		<result property="uuid" column="UUID"/>
		<result property="uploadPath" column="UPLOADPATH"/>
		<result property="fileName" column="FILENAME"/>
		<result property="image" column="IMAGE"/>
		<result property="boardNo" column="BOARDNO"/>
	</resultMap>

	<select id="getFileList" resultMap="boardAttachResultMap">
		SELECT UUID, UPLOADPATH, FILENAME, IMAGE, BOARDNO
		FROM BOARD_ATTACH
		WHERE BOARDNO = #{boardNo}
	</select>

	<!-- 첨부파일 삭제 -->
	<delete id="deleteFile">
		DELETE FROM BOARD_ATTACH WHERE BOARDNO = #{boardNo}
	</delete>

	<select id="findByUuid" parameterType="string" resultType="com.boot.dto.BoardAttachDTO">
		SELECT * FROM BOARD_ATTACH WHERE UUID = #{uuid}
	</select>

	<delete id="deleteFileDB" parameterType="string">
		DELETE FROM BOARD_ATTACH WHERE UUID = #{uuid}
	</delete>


</mapper>